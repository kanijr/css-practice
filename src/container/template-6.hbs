{{!--
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
--}}


<header class="header">
    <div>
        {{>logo}}
    </div>

    <nav class="header_nav">
        <div class="header_nav_right">
            {{>nav list=header}}
        </div>
    </nav>
</header>

<main class="main">
    <div class="info">
        <h1 class="info_title">{{info.title}}</h1>
        <p class="info_text">{{info.description}}</p>
    </div>


    {{#with form}}
    <form class="form">
        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
                id="form-input-{{id}}">
            {{/each}}
        </div>

        <div class="form_checkbox">
            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>
        <button type="submit" class="form_button">{{button}}</button>
        <div class="divider"></div>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}
</main>

<div class="updates">
    {{#with updates}}
    <h3 class="update_title">{{title}}</h3>
    {{#each list}}
    <div class="update_info">
        <img src="https://picsum.photos/32/32" class="update_image">
        <div>
            <span class="update_nickname">{{nickname}}</span>
            <p class="upupdate_description">{{description}}</p>
        </div>
    </div>
    {{/each}}
    <a href="{{show_all.url}}">{{show_all.text}}</a>
    {{/with}}
</div>

{{#with expirience}}
<div class="expirience">
    <h2 class="expirience_title">{{title}}</h2>
    <span class="expirience_badge">{{badge}}</span>
    <div class="expirience_list">
        {{#each list}}
        <div class="expirience_list_item">
            <strong class="expirience_item_title">{{name}}</strong>
            <p class="expirience_item_text">{{details}}</p>
        </div>
        {{/each}}
    </div>
</div>
{{/with}}

<footer class="footer">
    <div>
        {{>logo}}
        <span class="footer_copyright"> Copyright 2023-2024</span>
    </div>

    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>



